<!-- views/users/profile.ejs -->

<%- include('../layouts/mainLayout', { title: 'Профіль', content: '' }) %>

<h1>Профіль користувача</h1>

<h2>Ім'я: <%= user.name %></h2>
<h2>Електронна пошта: <%= user.email %></h2>

<!-- Розділ "Редагувати профіль" -->
<div class="edit-profile">
    <h2>Редагувати профіль</h2>
    <form action="/users/profile/edit" method="POST">
        <label for="name">Ім'я:</label>
        <input type="text" id="name" name="name" value="<%= user.name %>" required>

        <label for="email">Електронна пошта:</label>
        <input type="email" id="email" name="email" value="<%= user.email %>" required>

        <!-- Додайте інші поля для редагування профілю, якщо потрібно -->

        <button type="submit">Зберегти зміни</button>
    </form>
</div>

<!-- Розділ "Мої рецепти" -->
<div class="my-recipes">
    <h2>Мої рецепти</h2>
    <% if (user.recipes.length > 0) { %>
        <ul>
            <% user.recipes.forEach(function(recipe) { %>
                <li><a href="/recipes/<%= recipe._id %>"><%= recipe.name %></a></li>
            <% }); %>
        </ul>
    <% } else { %>
        <p>У вас ще немає рецептів.</p>
    <% } %>
</div>

<!-- Додайте інші деталі профілю, якщо потрібно -->

<a href="/users/logout">Вийти</a>
